<idea-plugin>
    <!-- Unique plugin identifier -->
    <id>com.dsplugin.dsgitcelebration</id>

    <!-- Plugin name as shown in Marketplace -->
    <name>DSGitCelebration</name>

    <!-- Plugin version -->
    <version>1.0.0</version>

    <!-- Author / Vendor information -->
    <vendor email="acavallaro.ge@gmail.com"
            url="https://github.com/Gnegnoli">
        Gnegnoli
    </vendor>

    <!-- Plugin description (HTML allowed) -->
    <description><![CDATA[
        <b>DSGitCelebration</b><br><br>
        Adds Dark Soulsâ€“style visual and audio celebrations to Git actions
        inside JetBrains IDEs.<br><br>

        When performing Git actions such as commit, merge, push, or pull,
        the plugin displays a transparent animated overlay with fade-in and
        fade-out effects and plays a custom sound.<br><br>

        <b>Main features:</b>
        <ul>
            <li>Transparent PNG overlay</li>
            <li>Smooth fade-in and fade-out animation</li>
            <li>Custom images and sounds per Git action</li>
            <li>Non-blocking and immersive experience</li>
            <li>Configurable via Tools menu</li>
        </ul>
    ]]></description>

    <!-- Changelog -->
    <change-notes><![CDATA[
        <b>1.0.0</b><br>
        Initial public release.
    ]]></change-notes>

    <!-- IDE compatibility -->
    <idea-version since-build="233" until-build="241.*"/>

    <!-- Required platform module -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extensions -->
    <extensions defaultExtensionNs="com.intellij">

        <!-- Startup activity -->
        <postStartupActivity
                implementation="com.dsplugin.gitcelebration.GitCelebrationStartupActivity"/>

        <!-- Git commit interception -->
        <checkinHandlerFactory
                implementation="com.dsplugin.gitcelebration.GitCelebrationCheckinHandlerFactory"/>

        <!-- Persistent project configuration -->
        <projectService
                serviceImplementation="com.dsplugin.gitcelebration.CelebrationConfig"/>

    </extensions>

    <!-- Actions -->
    <actions>
        <action id="DSGitCelebration.Configure"
                class="com.dsplugin.gitcelebration.actions.ConfigureAction"
                text="Configure DSGitCelebration"
                description="Configure images and sounds for Git celebrations">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>

</idea-plugin>
